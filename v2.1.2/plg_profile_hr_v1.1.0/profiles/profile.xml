<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="profile">
        <fieldset name="profile"
                          label="PLG_USER_PROFILE_HR_SLIDER_LABEL"
        >
            <field
                name="doj"
                type="dob"
                info="PLG_USER_PROFILE_HR_SPACER_DOJ"                
                label="PLG_USER_PROFILE_HR_FIELD_DOJ_LABEL"
                description="PLG_USER_PROFILE_HR_FIELD_DOJ_DESC"
                format="%Y-%m-%d"
                filter="server_utc"
            />

 
                        
            <field
                name="dor"
                type="dob"
                info="PLG_USER_PROFILE_HR_SPACER_DOR"                
                label="PLG_USER_PROFILE_HR_FIELD_DOR_LABEL"
                description="PLG_USER_PROFILE_HR_FIELD_DOR_DESC"
                format="%Y-%m-%d"
                filter="server_utc"
            />
                        
      

            <field
                name="dob"
                type="dob"
                label="PLG_USER_PROFILE_HR_FIELD_DOB_LABEL"
                description="PLG_USER_PROFILE_HR_FIELD_DOB_DESC"
                info="PLG_USER_PROFILE_HR_SPACER_DOB"
                format="%Y-%m-%d"
                filter="server_utc"
            />
            <field
                name="tos"
                type="tos"
                default=""
                label="PLG_USER_PROFILE_HR_FIELD_TOS_LABEL"
                description="PLG_USER_PROFILE_HR_FIELD_TOS_DESC">
                <option value="1">PLG_USER_PROFILE_OPTION_AGREE</option>
                <option value="">JNO</option>
            </field>
            
            <field
                name="approver"
                type="approver"
                default="0"
                label="PLG_USER_PROFILE_HR_FIELD_APPROVER_LABEL"
                description="PLG_USER_PROFILE_HR_FIELD_APPROVER_DESC">
                <option value="1">PLG_USER_PROFILE_OPTION_AGREE</option>
                <option value="0">PLG_USER_PROFILE_OPTION_NO_AGREE</option>
            </field>    
                    
            <field
                name="applicant"
                type="applicant"
                default="0"
                label="PLG_USER_PROFILE_HR_FIELD_APPLICANT_LABEL"
                description="PLG_USER_PROFILE_HR_FIELD_APPLICANT_DESC">
                <option value="1">PLG_USER_PROFILE_OPTION_AGREE</option>
                <option value="0">PLG_USER_PROFILE_OPTION_NO_AGREE</option>
            </field>                
        </fieldset>
    </fields>
</form>
